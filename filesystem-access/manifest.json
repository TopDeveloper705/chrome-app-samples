{
  "name": "Filesystem Access Example",
  "version": "1",
  "manifest_version": 2,
  "minimum_chrome_version": "30",
  "icons": {
    "16": "camera.png",
    "128": "camera.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries"]},
    "storage"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ],
      "title": "Text editor"
    }
  }
}
