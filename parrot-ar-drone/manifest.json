{
  "manifest_version": 2,
  "version": "0.2",
  "name": "Drone Controller Sample",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [{
    "socket": [
      "udp-bind::5554",
      "udp-send-to::5554",

      "tcp-connect:*:5555",
      "tcp-listen:*:5555",

      "udp-bind::5556",
      "udp-send-to::5556",

      "udp-bind::5559",
      "udp-send-to::5559"]
    }]
}
